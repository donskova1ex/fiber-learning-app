package components

type InputProps struct {
	Placeholder string
	Name        string
}

templ Input(props InputProps) {
	@InputStyle()
	<input class="input" placeholder={ props.Placeholder } name={ props.Name }/>
}

templ InputStyle() {
	<style>
        .input {
            height: 80px;
            padding: 20px;
            border-radius: 20px;
            background: var(--color-primary-white);
            border: none;   
        }
        .input::placeholder {
            color: var(--color-primary-gray);
        }
    </style>
}
